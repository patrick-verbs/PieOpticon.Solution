<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>PieOpticon | Vendor & Order Tracking</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using PieOpticon.Models
    <h1>Vendor: @Model["vendor"].Name</h1>

    <h2>@Model["vendor"].Description</h2>

    @if (@Model["orders"].Count == 0)
    {
      <br>
      <h3>No past orders from this vendor!</h3>
    }
    else
    {
      <ol>
      @foreach (Order order in @Model["orders"])
      {
        <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
      }
      </ol>
    }

    <br>
    <a href='/vendors/@Model["vendor"].Id/orders/new'><button>Add an order!</button></a>
    <br>
    <a href="/vendors"><button>Back to Vendors</button></a>
  </body>
</html>