<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>PieOpticon | Vendor & Order Tracking</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    <h1>Vendors</h1>
    
    @using PieOpticon.Models;
    @if (@Model.Count == 0)
    {
      <br>
      <h3>No vendors have been added yet!</h3>
    }
    else
    {
      <ol>
      @foreach (Vendor vendor in Model)
      {
        <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
      }
      </ol>
    }
    <br>

    <p><a href="/vendors/new">Click here</a> to add a new Vendor.</p>
  </body>
</html>